<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/register"
        android:textColor="#ffffff"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/textFisrtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignStart="@+id/login"
        android:text="First Name"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/fisrtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFisrtName"
        android:theme="@style/edittext_theme"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/textLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fisrtname"
        android:layout_alignStart="@+id/login"
        android:text="Last Name"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLastName"
        android:theme="@style/edittext_theme"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:layout_alignStart="@+id/login"
        android:text="E-mail"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:theme="@style/edittext_theme"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEmail"
        android:theme="@style/edittext_theme"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/login"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPassword"
        android:layout_alignStart="@+id/login"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:theme="@style/edittext_theme" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="10dp"
        android:layout_centerHorizontal="true"
        android:text="CREATE ACCOUNT"
        android:background="@drawable/bgfb"
        android:textColor="#ffffff"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="@drawable/logotrang"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>